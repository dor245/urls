<h1 class="text-center my-5">Registro de usuarios</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form action="/auth/register" method="post">
            <!-- Seguridad csurf -->
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            <h5>Nombre</h5>
            <input type="text" name="userName" placeholder="Ingrese su nombre" class="form-control mb-2">
            <h5>Email</h5>
            <!-- No type email para validar en backend -->
            <input type="text" name="email" placeholder="Ingrese su email" class="form-control mb-2">
            <h5>Clave</h5>
            <input type="password" name="password" placeholder="Ingrese su clave" class="form-control mb-2">
            <h5>Repita la clave</h5>
            <input type="password" name="repassword" placeholder="Repita la clave" class="form-control mb-2">
            <input type="submit" value="Enviar" class="btn btn-primary">
            <a href="/auth/login" class="link-secondary mx-2">LogIn</a>
        </form>
    </div>
</div>