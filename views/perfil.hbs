<h1 class="text-center">{{user.userName}}</h1>
<p class="text-center">Edicion de perfil</p>
<div class="my-3 text-center">
    {{#if imagen}}
    <img src="/img/perfiles/{{imagen}}" alt="imagen perfil" class="rounded-circle">
    {{else}}
    <img src="/img/perfiles/default.jpg" alt="imagen perfil" class="rounded-circle">
    {{/if}}

</div>
<!-- csurf en img -->
<form action="/user/perfil?_csrf={{csrfToken}}" enctype="multipart/form-data" method="post">
    <input class="form-control form-control-sm" type="file" id="formFileSm" name="myFile" />
    <input type="submit" value="Cambiar foto" class="btn btn-warning my-3">
</form>